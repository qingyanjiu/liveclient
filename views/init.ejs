<script>
    function startInit(){
        $.ajax({
            //提交数据的类型 POST GET
            type: "POST",
            //提交的网址
            url: "/initDatabase",
            //提交的数据
            data: {
            },
            //返回数据的格式
            datatype: "json",
            success: function (data) {
                if (data.result === 'success') {
                    alert("初始化成功，点击确定开始使用！");
                    document.location = "/";
                }
                else if (data.result === 'error') {
                    alert("初始化失败，请重试");
                }
            },
            //调用出错执行的函数
            error: function (err) {
                alert("系统错误，请稍后重试");
            }
        });
    }
</script>

