<script type="text/javascript">
    function toggleMenu(obj) {
        if (obj == '0') {
            $("#login").hide();
            $("#live").show();
            $("#regi").hide();
            $("#cont").hide();
        }
        else if (obj == '1') {
            $("#login").hide();
            $("#live").hide();
            $("#regi").show();
            $("#cont").hide();
        }
        else if (obj == '2') {
            $("#login").hide();
            $("#live").hide();
            $("#regi").hide();
            $("#cont").show();
        } else if (obj == '3') {
            $("#login").show();
            $("#live").hide();
            $("#regi").hide();
            $("#cont").hide();
        }
    }


    function login() {
        $.ajax({
            //提交数据的类型 POST GET
            type: "POST",
            //提交的网址
            url: "/user/login",
            //提交的数据
            data: {username: $("#username").val(), password: $("#password").val()},
            //返回数据的格式
            datatype: "json",
            //"xml", "html", "script", "json", "jsonp", "text".
            success: function (data) {
                if (data.result === 'success') {
//                    alert("登录成功");
                    document.location.href = "/live";
                }
                else if (data.result === 'empty') {
                    alert("用户名或密码错误");
                }
            },
            //调用出错执行的函数
            error: function () {
                alert("系统错误，请稍后重试");
            }
        });
    }


    function register() {
        $.ajax({
            //提交数据的类型 POST GET
            type: "POST",
            //提交的网址
            url: "/user/register",
            //提交的数据
            data: {
                username: $("#register_username").val(),
                password: $("#register_password").val()
            },
            //返回数据的格式
            datatype: "json",
            success: function (data) {
                if (data.result === 'success') {
                    alert("注册成功");
                }
                else if (data.result === 'exist') {
                    alert("用户已存在");
                }
            },
            //调用出错执行的函数
            error: function (err) {
                alert("系统错误，请稍后重试");
            }
        });
    }

</script>

</body>
