<script type="text/javascript">
    function login() {
        $.ajax({
            //提交数据的类型 POST GET
            type: "POST",
            //提交的网址
            url: "/user/login",
            //提交的数据
            data: {username: $("#username").val(), password: $("#password").val()},
            //返回数据的格式
            datatype: "json",
            //"xml", "html", "script", "json", "jsonp", "text".
            success: function (data) {
                if (data.result == 'success') {
//                    alert("登录成功");
                    document.location.href = "/live/danmuList";
                }
                else if (data.result == 'empty') {
                    alert("用户名或密码错误");
                }
                else if (data.result == 'error') {
                    alert("登录出错，请重试");
                }
            },
            //调用出错执行的函数
            error: function () {
                alert("系统错误，请稍后重试");
            }
        });
    }


</script>

